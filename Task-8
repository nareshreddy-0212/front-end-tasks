  <h1>Form Tasks (16–30)</h1>

  <!-- 16–30: Form Example -->
  <form action="#" method="post">

    <!-- 16, 17: Basic Form with Placeholders -->
    <h3>16–17. Basic Form</h3>
    <input type="text" placeholder="Enter Name" id="name"><br><br>
    <input type="email" placeholder="Enter Email" id="email"><br><br>
    <textarea placeholder="Enter Message"></textarea><br><br>

    <!-- 18: Submit and Reset -->
    <input type="submit" value="Submit"> 
    <input type="reset" value="Reset"><br><br>

    <!-- 19: Fieldset -->
    <fieldset>
      <legend>Personal Info</legend>
      <label for="name">Name:</label>
      <input type="text" id="name2"><br><br>
    </fieldset>

    <!-- 20: Label -->
    <label for="email2">Email:</label>
    <input type="email" id="email2"><br><br>

    <!-- 21: Password -->
    <h3>21. Password</h3>
    <input type="password" placeholder="Password"><br><br>

    <!-- 22: Radio -->
    <h3>22. Gender</h3>
    <input type="radio" name="gender" value="Male"> Male
    <input type="radio" name="gender" value="Female"> Female
    <input type="radio" name="gender" value="Other"> Other<br><br>

    <!-- 23: Checkbox -->
    <h3>23. Languages</h3>
    <input type="checkbox" value="HTML"> HTML
    <input type="checkbox" value="CSS"> CSS
    <input type="checkbox" value="JS"> JavaScript<br><br>

    <!-- 24: Dropdown -->
    <h3>24. Country</h3>
    <select>
      <option>India</option>
      <option>USA</option>
      <option>UK</option>
    </select><br><br>

    <!-- 25: Textarea -->
    <h3>25. Feedback</h3>
    <textarea placeholder="Write your comments"></textarea><br><br>

    <!-- 26: Date -->
    <h3>26. Date</h3>
    <input type="date"><br><br>

    <!-- 27: Number -->
    <h3>27. Number</h3>
    <input type="number" min="1" max="100"><br><br>

    <!-- 28: File -->
    <h3>28. File Upload</h3>
    <input type="file"><br><br>

    <!-- 29: Validation -->
    <h3>29. Validation</h3>
    <input type="text" required maxlength="10" pattern="[A-Za-z]+" placeholder="Only letters"><br><br>

    <!-- 30: Action/Method (already shown in form tag above) -->

  </form>

