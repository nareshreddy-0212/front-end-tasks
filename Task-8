  <!-- 5: Colspan -->
  <h3>5. Colspan Example</h3>
  <table border="1">
    <tr><td colspan="2">Merged Column</td></tr>
    <tr><td>Left</td><td>Right</td></tr>
  </table>

  <!-- 6: Rowspan -->
  <h3>6. Rowspan Example</h3>
  <table border="1">
    <tr><td rowspan="2">Merged Row</td><td>Row 1</td></tr>
    <tr><td>Row 2</td></tr>
  </table>

